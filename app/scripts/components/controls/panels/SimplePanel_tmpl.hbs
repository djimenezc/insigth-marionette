<div class="panel panel-default ">
    <div class="panel-heading">
    <span class="panelHelp" title="" data-original-title="View of latest results by Online Store, Category or Brand">
   {{title}}  <span class="glyphicon glyphicon-question-sign"></span>
        <span class="slot1 pull-right"></span>
        <button type="button" class="display-all pull-right btn btn-default btn-sm hidden">Display All</button>
		{{#if filter}}
            <input id="{{filterId}}" type="text" class="form-control input-sm filterHeaderField pull-right"
                   placeholder="Filter" value="">
		{{/if}}
		</span>
    </div>

    <div class="preloader-view row-fluid clearfix hide">
        <div class="pad col-md-12">
            <div class="alert alert-info text-center">Loading</div>
        </div>
    </div>

    <div id="{{prefix}}-simple-panel"></div>
</div>


